extends _layout

block content
  .ibm-columns
    .ibm-col-5-1
    .ibm-col-5-5
      .network-container
        .network-circle
        .ibm-card.insurance-peer
          .ibm-card__content
              a(href='/insurance')
                h3.ibm-h3 #{ __('Insurance') }
              p.ibm-ind-link
                a.ibm-forward-link(href='/insurance/self-service')
                  | #{ __('Go To The Claim Self-Service') }
              p.ibm-ind-link
                a.ibm-forward-link(href='/insurance/claim-processing')
                  | #{ __('Go To The Claim Processing') }
              p.ibm-ind-link
                a.ibm-forward-link(href='/insurance/contract-management')
                  | #{ __('Go To The Contract Management') }
        .ibm-card.shop-peer
          .ibm-card__content
            a(href='/shop')
              h3.ibm-h3 #{ __('Subscription') }
            p.ibm-ind-link
              a.ibm-forward-link(href='/shop') #{ __('Go To The Subscription Peer') }
        .ibm-card.police-peer
          .ibm-card__content
            a(href='/police')
              h3.ibm-h3 #{ __('Fraud Departement') }
            p.ibm-ind-link
              a.ibm-forward-link(href='/police')
                | #{ __('Go To The Fraud Departement Peer') }